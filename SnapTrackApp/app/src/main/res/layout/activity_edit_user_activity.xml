<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.EditUserActivity">

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:labelFor="@+id/nameEdit"
        android:text="Activity Name"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/nameLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Activity Name"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toBottomOf="@+id/nameEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:labelFor="@+id/categoryEdit"
        android:text="Category Name"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/categoryEdit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/categoryLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Category Name"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/colorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toBottomOf="@+id/categoryEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:labelFor="@+id/colorEdit"
        android:text="Color"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/colorDisplay"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/categoryEdit"
        app:layout_constraintLeft_toRightOf="@+id/colorLabel"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/black"
        android:textSize="20sp"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/colorLabel"
        >

        <TextView
            android:id="@+id/aLabel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:labelFor="@+id/colorEdit"
            android:text="Alpha"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <SeekBar
            android:id="@+id/aBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/aLabel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:min="0"
            android:max="255"
            android:progress="100"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/s2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/s1"
        >

        <TextView
            android:id="@+id/rLabel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:labelFor="@+id/colorEdit"
            android:text="Red"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <SeekBar
            android:id="@+id/rBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/rLabel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:min="0"
            android:max="255"
            android:progress="100"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/s3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/s2"
        >

        <TextView
            android:id="@+id/gLabel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:labelFor="@+id/colorEdit"
            android:text="Green"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <SeekBar
            android:id="@+id/gBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/gLabel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:min="0"
            android:max="255"
            android:progress="100"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/s4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/s3"
        >

        <TextView
            android:id="@+id/bLabel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:labelFor="@+id/colorEdit"
            android:text="Blue"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <SeekBar
            android:id="@+id/bBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/bLabel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:min="0"
            android:max="255"
            android:progress="100"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <TextView
        android:id="@+id/aidLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toBottomOf="@+id/s4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Activity ID: xxxxxxxx"
        android:textSize="15sp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/pairNfcTagButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="30dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/aidLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Pair NFC Tag"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Save"
        />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintRight_toLeftOf="@+id/saveButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Cancel"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
