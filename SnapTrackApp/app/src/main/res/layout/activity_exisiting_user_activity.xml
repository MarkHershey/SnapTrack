<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".ui.activities.EditUserActivity">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:labelFor="@+id/nameEdit_pop"
        android:text="Existing NFC Data"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/nameLabel_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toBottomOf="@+id/label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:labelFor="@+id/nameEdit_pop"
        android:text="Activity Name"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/nameEdit_pop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/nameLabel_pop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Activity Name"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/categoryLabel_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toBottomOf="@+id/nameEdit_pop"
        app:layout_constraintLeft_toLeftOf="parent"
        android:labelFor="@+id/categoryEdit_pop"
        android:text="Category Name"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/categoryEdit_pop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/categoryLabel_pop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Category Name"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/colorLabel_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toBottomOf="@+id/categoryEdit_pop"
        app:layout_constraintLeft_toLeftOf="parent"
        android:labelFor="@+id/colorEdit_pop"
        android:text="Color"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/colorDisplay_pop"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/categoryEdit_pop"
        app:layout_constraintLeft_toRightOf="@+id/colorLabel_pop"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/black"
        android:textSize="20sp"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/s1_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/colorLabel_pop"
        >

        <TextView
            android:id="@+id/aLabel_pop"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:labelFor="@+id/colorEdit_pop"
            android:text="Alpha"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <SeekBar
            android:id="@+id/aBar_pop"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/aLabel_pop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:min="0"
            android:max="255"
            android:progress="100"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/s2_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/s1_pop"
        >

        <TextView
            android:id="@+id/rLabel_pop"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:labelFor="@+id/colorEdit"
            android:text="Red"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <SeekBar
            android:id="@+id/rBar_pop"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/rLabel_pop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:min="0"
            android:max="255"
            android:progress="100"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/s3_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/s2_pop"
        >

        <TextView
            android:id="@+id/gLabel_pop"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:labelFor="@+id/colorEdit"
            android:text="Green"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <SeekBar
            android:id="@+id/gBar_pop"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/gLabel_pop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:min="0"
            android:max="255"
            android:progress="100"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/s4_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/s3_pop"
        >

        <TextView
            android:id="@+id/bLabel_pop"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:labelFor="@+id/colorEdit"
            android:text="Blue"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <SeekBar
            android:id="@+id/bBar_pop"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/bLabel_pop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:min="0"
            android:max="255"
            android:progress="100"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/aidLabel_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toBottomOf="@+id/s4_pop"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Activity ID: xxxxxxxx"
        android:textSize="15sp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="30dp"
        android:layout_marginTop="28dp"
        android:padding="10dp"
        android:text="@string/erase_data"
        app:layout_constraintHorizontal_bias="0.69"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aidLabel_pop" />

    <Button
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="30dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/colorAccent"
        android:padding="10dp"
        android:text="@string/cancel"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aidLabel_pop" />


</androidx.constraintlayout.widget.ConstraintLayout>